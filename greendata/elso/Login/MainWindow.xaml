<Window x:Class="elso.Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="350" WindowStartupLocation="CenterScreen" Background="#0A5581" FontSize="14">
    <Border Background="#0D1920" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Bejelentkezés" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Felhasználónév" Foreground="white"></Label>
            <TextBox Name="textb1" Background="#0d1928" Foreground="White" Cursor="IBeam" CaretBrush="White"></TextBox>
            <Label Content="Jelszó" Foreground="white"></Label>
            <PasswordBox x:Name="textb3" Background="#0d1928" Foreground="white" Cursor="IBeam" CaretBrush="White" ></PasswordBox>
            <Button Content="Belépés" Click="Button_Click_2" Foreground="white" Background="Gray" Margin="10" Height="30"></Button>
            <Button Content="Regisztráció" Click="Button_Click" Foreground="white" Background="Gray" Margin="10" Width="90"></Button>
            <Button Content="Belépés vendégként" Click="Button_Click_1" Foreground="white" Background="Gray" Margin="10" Width="140"></Button>
        </StackPanel>
    </Border>
</Window>
