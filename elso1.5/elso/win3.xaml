<Window x:Class="elso.win3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Választás" Height="240" Width="330" WindowStartupLocation="CenterScreen" Background="DarkSlateGray">
    <Border Margin="10" Background="Black" CornerRadius="20">
        <StackPanel>
            <Button HorizontalAlignment="Center" Width="50" Height="20" Content="Vissza" Margin="20"></Button>
            <StackPanel Orientation="Horizontal">
                <Border Margin="10" Background="LawnGreen" CornerRadius="60">
                    <Button Width="90" Height="60" Margin="20" Content="Képszerkeztő" HorizontalAlignment="left" Background="LawnGreen" BorderThickness="0" Click="Button_Click_3"></Button>
                </Border>
                <Border Margin="10" Background="LightBlue" CornerRadius="60">
                    <Button Width="90" Height="60" Margin="20" Content="Vissza" HorizontalAlignment="Right" Background="LightBlue" BorderThickness="0"></Button>
                </Border>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
